<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_pegaNumerador"
        android:hint="numerador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/et_pegaDenominador"
        android:hint="Denominador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_mostraErro"
        android:textColor="red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="calcula"
        android:onClick="mandaCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_mostraResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>